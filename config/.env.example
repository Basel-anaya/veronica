# Environment
ENVIRONMENT=development
DEBUG=False
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-secret-key-here
CSRF_KEY=your-csrf-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
MIN_PASSWORD_LENGTH=12

# Server Settings
HOST=0.0.0.0
PORT=5000
WORKERS=4

# CORS and Security
ALLOWED_ORIGINS=https://yourdomain.com
ALLOWED_HOSTS=yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=60
MAX_REQUESTS_PER_WINDOW=100
MAX_SESSIONS_PER_IP=3

# Session Settings
SESSION_TIMEOUT=30
MIN_FRAME_INTERVAL=0.2

# Face Detection Settings
MIN_DETECTION_CONFIDENCE=0.8
TARGET_FPS=30
INPUT_WIDTH=640
INPUT_HEIGHT=480

# Database settings
DB_HOST=localhost
DB_PORT=1433
DB_NAME=AI
DB_USER=aiuser
DB_PASSWORD=your-password-here
DB_DRIVER=ODBC Driver 18 for SQL Server

# GPU settings
CUDA_VISIBLE_DEVICES=0
USE_GPU=True
MAX_GPU_MEMORY=0.5

# Model settings
MODEL_PATH=models/
FACE_DETECTION_MODEL=face_detector.tflite
FACE_LANDMARK_MODEL=face_landmarker.task
SHAPE_PREDICTOR_MODEL=shape_predictor_68_face_landmarks.dat

# Frontend settings
FRAMES_REQUIRED=5
MIN_FRAME_INTERVAL_MS=200
MAX_RETRIES=3
RETRY_DELAY=1000
FRONTEND_SESSION_TIMEOUT=10000
MIN_LIVENESS_CONFIDENCE=0.6 